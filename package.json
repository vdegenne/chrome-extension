{
	"name": "@vdegenne/chrome-extension",
	"version": "0.1.0",
	"description": "",
	"type": "module",
	"main": "",
	"module": "",
	"exports": {
		".": {
			"import": "./lib/index.js",
			"types": "./lib/index.d.ts"
		},
		"./events/*": {
			"import": "./lib/events/*.js",
			"types": "./lib/events/*.d.ts"
		},
		"./offscreen.js": {
			"import": "./lib/offscreen.js",
			"types": "./lib/offscreen.d.ts"
		},
		"./storage.js": {
			"import": "./lib/storage.js",
			"types": "./lib/storage.d.ts"
		}
	},
	"scripts": {
		"build": "wireit"
	},
	"files": [],
	"devDependencies": {
		"@types/chrome": "^0.1.12",
		"typescript": "^5.9.2",
		"wireit": "^0.14.12"
	},
	"wireit": {
		"build": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"./tsconfig.json",
				"./src"
			],
			"output": [
				"./lib"
			]
		}
	}
}

{
	"name": "@vdegenne/chrome-extension",
	"version": "0.1.9",
	"description": "",
	"type": "module",
	"exports": {
		".": {
			"import": "./lib/index.js",
			"types": "./lib/index.d.ts"
		},
		"./events/*.js": {
			"import": "./lib/events/*.js",
			"types": "./lib/events/*.d.ts"
		},
		"./offscreen.js": {
			"import": "./lib/offscreen.js",
			"types": "./lib/offscreen.d.ts"
		},
		"./storage.js": {
			"import": "./lib/storage.js",
			"types": "./lib/storage.d.ts"
		},
		"./alarm.js": {
			"import": "./lib/alarm.js",
			"types": "./lib/alarm.d.ts"
		},
		"./misc.js": {
			"import": "./lib/misc.js",
			"types": "./lib/misc.d.ts"
		},
		"./debug.js": {
			"import": "./lib/debug.js",
			"types": "./lib/debug.d.ts"
		},
		"./notifications.js": {
			"import": "./lib/notifications.js",
			"types": "./lib/notifications.d.ts"
		},
		"./sidepanel.js": {
			"import": "./lib/sidepanel.js",
			"types": "./lib/sidepanel.d.ts"
		}
	},
	"scripts": {
		"build": "wireit"
	},
	"files": [
		"./lib/"
	],
	"devDependencies": {
		"@types/chrome": "^0.1.12",
		"typescript": "^5.9.2",
		"wireit": "^0.14.12"
	},
	"wireit": {
		"build": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"./tsconfig.json",
				"./src"
			],
			"output": [
				"./lib"
			]
		}
	}
}
